@using shop.Data.Enums;
@model shop.ViewModels.Catalog.Promotions.PromotionCreateRequest

@{
    ViewData["Title"] = "Create";
string percent = ViewBag.DiscountPercent;
string number = ViewBag.DiscountAmount;
}

<h1>Create</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>           
            <div class="form-group">
                <label for="StartDate">Start Date</label>
                <input type="date" class="form-control" id="StartDate" name="StartDate" />
            </div>
            <div class="form-group">
                <label for="FinishDate">Finish Date</label>
                <input type="date" class="form-control" id="FinishDate" name="FinishDate" />
            </div>
            <div class="form-group">
                <label for="DiscountPercent">Discount Percent</label>
                <input type="number" class="form-control" id="DiscountPercent" name="DiscountPercent" value="@percent" />
            </div>
            <div class="form-group">
                <label for="DiscountAmount">Discount Amount</label>
                <input type="number" class="form-control" id="DiscountAmount" name="DiscountAmount" value="@number" />
            </div>
            <div class="form-group">
                <label for="Status">Status</label>
                <select class="form-control" id="Status" name="Status">
                    @foreach (var status in Enum.GetValues(typeof(shop.Data.Enums.PromotionStatus)))
                {
                    <option value="@status">@status</option>
                }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Show">Back to List</a>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
